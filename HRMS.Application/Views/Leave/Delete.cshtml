@model HRMS.Application.Models.Leave

@{
    ViewData["Title"] = "Delete Leave";
}

<div class="container mt-4">
    <h2>Delete Leave Request</h2>

    <div class="alert alert-warning">
        <strong>Are you sure you want to delete this leave request?</strong>
    </div>

    <div class="card">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Employee</dt>
                <dd class="col-sm-9">@Model.Employee.FullName</dd>

                <dt class="col-sm-3">Type</dt>
                <dd class="col-sm-9">@Model.Type</dd>

                <dt class="col-sm-3">Start Date</dt>
                <dd class="col-sm-9">@Model.StartDate.ToString("dd-MMM-yyyy")</dd>

                <dt class="col-sm-3">End Date</dt>
                <dd class="col-sm-9">@Model.EndDate.ToString("dd-MMM-yyyy")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>

                <dt class="col-sm-3">Reason</dt>
                <dd class="col-sm-9">@Model.Reason</dd>
            </dl>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Yes, Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
