<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="Name">Holiday Name</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <label for="DateBS">Holiday Date (BS)</label>
        <input type="text" id="nepaliDate" name="DateBS" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Save Holiday</button>
</form>

@section Scripts {
    <link href="~/lib/nepali-date-picker/dist/nepalidatepicker.min.css" rel="stylesheet" />
    <script src="~/lib/nepali-date-picker/dist/nepalidatepicker.min.js"></script>

    <script>
        window.onload = function () {
            var datePicker = document.getElementById("nepaliDate");
            if (datePicker) {
                nepaliDatePicker(datePicker);
            }
        };
    </script>
}