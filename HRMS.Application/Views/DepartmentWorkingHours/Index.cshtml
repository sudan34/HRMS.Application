@model IEnumerable<HRMS.Application.Models.DepartmentWorkingHours>

@{
    ViewData["Title"] = "Department Working Hours";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Department Working Hours</h2>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </div>

    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>Department</th>
                    <th>Start Time</th>
                    <th>End Time</th>
                    <th>Late Threshold</th>
                    <th>Required Hours</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Department.Name</td>
                        <td>@item.StartTime.ToString(@"hh\:mm")</td>
                        <td>@item.EndTime.ToString(@"hh\:mm")</td>
                        <td>@item.LateThreshold.ToString(@"hh\:mm")</td>
                        <td>@item.RequiredWorkHours hours</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>