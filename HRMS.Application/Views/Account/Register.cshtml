@using HRMS.Application.ViewModel
@model RegisterViewModel

@{
    Layout = "_LoginLayout";
    ViewData["Title"] = "Register";
}
<div class="d-flex justify-content-center">
    <div class="card shadow-lg rounded-4 border-0 auth-card w-75">
        <div class="card-body p-4 p-md-5">
            <!-- Centered Header -->
            <div class="text-center mb-4 auth-header">
                <i class="bi bi-person-plus register-icon auth-icon"></i>
                <h2 class="h4 mb-1 fw-bold mt-2">Create Account</h2>
                <p class="text-muted small">User Registration</p>
            </div>

            <form asp-action="Register" method="post" novalidate>
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger text-center mb-4">
                        @Html.ValidationSummary()
                    </div>
                }

                <div class="mb-3">
                    <label asp-for="EmployeeId" class="form-label">Employee ID</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-person-badge-fill"></i></span>
                        <input asp-for="EmployeeId" class="form-control" placeholder="Enter your employee ID" />
                    </div>
                    <span asp-validation-for="EmployeeId" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Email" class="form-label">Email address</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-envelope"></i></span>
                        <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-lock"></i></span>
                        <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
                    </div>
                    <span asp-validation-for="Password" class="text-danger small"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                    <div class="input-group">
                        <span class="input-group-text bg-light"><i class="bi bi-lock-fill"></i></span>
                        <input asp-for="ConfirmPassword" class="form-control" type="password" placeholder="Re-enter your password" />
                    </div>
                    <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                </div>

                <div class="d-grid mt-3">
                    <button type="submit" class="btn btn-success btn-lg">
                        <i class="bi bi-person-plus me-2"></i>Register
                    </button>
                </div>
            </form>

            <div class="card-footer text-center py-3 bg-light mt-4">
                <p class="text-muted small mb-0">
                    Already have an account?
                    <a asp-action="Login" asp-controller="Account" class="flip-link text-primary fw-bold">Sign in here</a>
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
